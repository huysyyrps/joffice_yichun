<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_inspectstarte"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.hy.powerplatform.business_inspect.activity.InspectStarteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="gone">
        <Button
            android:id="@+id/tvGet"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="取证"
            android:gravity="center"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/linearlayout_colore_radius"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:layout_height="match_parent" />
        <RadioGroup
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/llPass"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivPass"
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/check"/>
                <TextView
                    android:background="@color/white"
                    style="@style/radionbutton"
                    android:checked="true"
                    android:paddingRight="4dp"
                    android:gravity="center_vertical"
                    android:text="@string/pass"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llNoPass"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivNoPass"
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/nocheck"/>
                <TextView
                    android:background="@color/white"
                    style="@style/radionbutton"
                    android:checked="true"
                    android:paddingRight="4dp"
                    android:gravity="center_vertical"
                    android:text="@string/no_pass"/>
            </LinearLayout>
            <RadioButton
                android:visibility="gone"
                android:focusable="false"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="@string/no_pass"/>
        </RadioGroup>
    </LinearLayout>
    <View
        style="@style/line"
        android:layout_height="1dp"/>

</LinearLayout>
