<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/shouye">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/shouye"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--banner图-->
                <ImageView
                    android:id="@+id/mIvBanner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner" />
                <!--功能列表-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">
                    <!--功能列表分割线-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="14dp"
                            android:background="@color/color_bg_selected"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:gravity="center_vertical"
                            android:text="@string/function_list"
                            android:textSize="14dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <!--列表-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb_SignIn"
                                style="@style/fragment0_radionbutton"
                                android:drawableTop="@drawable/sign_in"
                                android:text="@string/sign_in" />

                            <RadioButton
                                android:id="@+id/rb_MyInformation"
                                style="@style/fragment0_radionbutton"
                                android:drawableTop="@drawable/my_information"
                                android:text="@string/my_information"/>

                            <RadioButton
                                android:id="@+id/rbtechProcess"
                                style="@style/fragment0_radionbutton"
                                android:drawableTop="@drawable/technological_process"
                                android:text="@string/technological_process"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="85dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb_BusinessInspe"
                                style="@style/fragment0_radionbutton"
                                android:drawableTop="@drawable/business_inspection"
                                android:text="@string/business_inspect"/>

                            <RadioButton
                                android:id="@+id/rb_DataAnalysis"
                                style="@style/fragment0_radionbutton"
                                android:drawableTop="@drawable/data_analysis"
                                android:text="@string/data_analysis"/>

                            <RadioButton
                                android:id="@+id/rbStaddWork"
                                style="@style/fragment0_radionbutton"
                                android:drawableTop="@drawable/staff_work"
                                android:text="@string/staff_work"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View style="@style/line"
                    android:layout_height="1dp"/>
                <!--新闻资讯-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--信息列表分割线-->
                    <LinearLayout
                        android:id="@+id/ll_notice"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="2dp"
                            android:layout_height="14dp"
                            android:background="@color/color_bg_selected"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14dp"/>
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:gravity="center_vertical"
                            android:text="@string/notice"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/moreNotice"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="200dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center_vertical"
                            android:text="@string/more_news"
                            android:textColor="@color/xiaohei"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <!--列表-->
                    <LinearLayout
                        android:id="@+id/ll_New"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@color/white"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <!--内容-->
                                <LinearLayout
                                    android:background="#FFFFFF"
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:background="#FFFFFF"
                                        android:layout_marginRight="12dp"
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/tvNoticeTitle"
                                            android:gravity="center_vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.5"
                                            android:textSize="16dp"
                                            android:maxLines="1"
                                            android:textColor="@color/xiaohei"
                                            android:layout_marginLeft="10dp"/>
                                        <com.hy.powerplatform.my_utils.myViews.RichTextView
                                            android:id="@+id/tvNoticeContent"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.5"
                                            android:maxLines="2"
                                            android:ellipsize="end"
                                            android:layout_marginBottom="5dp"
                                            android:textSize="13dp"
                                            android:layout_marginLeft="10dp"
                                            android:textColor="@color/xiaohei"
                                            android:gravity="center_vertical"
                                            android:enabled="true"
                                            android:focusable="false"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <!--介绍-->
                                <LinearLayout
                                    android:layout_marginLeft="10dp"
                                    android:background="@color/white"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="1dp"
                                    android:layout_height="25dp">
                                    <TextView
                                        android:id="@+id/tvNoticeDepartment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="11dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginBottom="6dp"
                                        android:layout_marginRight="15dp"
                                        android:textColor="@color/ziti"
                                        android:gravity="center_vertical"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_marginLeft="1dp"
                                        android:layout_marginBottom="6dp"
                                        android:layout_height="11dp"
                                        android:background="@color/shouye"/>
                                    <TextView
                                        android:id="@+id/tvNoticeTime"
                                        android:layout_marginLeft="3dp"
                                        android:layout_width="0dp"
                                        android:layout_weight="0.8"
                                        android:layout_marginBottom="6dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_height="match_parent"
                                        android:textSize="11dp"
                                        android:textColor="@color/ziti"
                                        android:gravity="center_vertical"/>
                                </LinearLayout>
                                <View style="@style/line" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_news"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="2dp"
                            android:layout_height="14dp"
                            android:background="@color/color_bg_selected"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14dp"/>
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:gravity="center_vertical"
                            android:text="@string/news"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/moreNews"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="200dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center_vertical"
                            android:text="@string/more_news"
                            android:textColor="@color/xiaohei"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <!--列表-->
                    <LinearLayout
                        android:id="@+id/ll_Notice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@color/white"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <!--内容-->
                                <LinearLayout
                                    android:background="#FFFFFF"
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:background="#FFFFFF"
                                        android:layout_marginRight="12dp"
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <TextView
                                            android:id="@+id/tvNewsTitle"
                                            android:gravity="center_vertical"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.5"
                                            android:textSize="16dp"
                                            android:maxLines="1"
                                            android:textColor="@color/xiaohei"
                                            android:layout_marginLeft="10dp"/>
                                        <com.hy.powerplatform.my_utils.myViews.RichTextView
                                            android:id="@+id/tvNewsContent"
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="1.5"
                                            android:maxLines="2"
                                            android:ellipsize="end"
                                            android:layout_marginBottom="5dp"
                                            android:textSize="13dp"
                                            android:layout_marginLeft="10dp"
                                            android:textColor="@color/xiaohei"
                                            android:gravity="center_vertical"
                                            android:enabled="true"
                                            android:focusable="false"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <!--介绍-->
                                <LinearLayout
                                    android:layout_marginLeft="10dp"
                                    android:background="@color/white"
                                    android:layout_width="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="1dp"
                                    android:layout_height="25dp">
                                    <TextView
                                        android:id="@+id/tvNewsDepartment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="11dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginBottom="6dp"
                                        android:layout_marginRight="15dp"
                                        android:textColor="@color/ziti"
                                        android:gravity="center_vertical"/>
                                    <View
                                        android:layout_width="1dp"
                                        android:layout_marginLeft="1dp"
                                        android:layout_marginBottom="6dp"
                                        android:layout_height="11dp"
                                        android:background="@color/shouye"/>
                                    <TextView
                                        android:id="@+id/tvNewsTime"
                                        android:layout_marginLeft="3dp"
                                        android:layout_width="0dp"
                                        android:layout_weight="0.8"
                                        android:layout_marginBottom="6dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_height="match_parent"
                                        android:textSize="11dp"
                                        android:textColor="@color/ziti"
                                        android:gravity="center_vertical"/>
                                </LinearLayout>
                                <View
                                    style="@style/line"
                                    android:layout_margin="2dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>