<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_signin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.hy.powerplatform.signin.activity.SignInActivity">

    <com.hy.powerplatform.my_utils.myViews.Header
        android:id="@+id/header"
        style="@style/Heander"
        app:header_title="@string/sign_in">
    </com.hy.powerplatform.my_utils.myViews.Header>

    <RadioGroup
        android:id="@+id/radionGroup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbPhoto"
            android:checked="true"
            style="@style/main_tab_style"
            android:textSize="16dp"
            android:text="签到" />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/shouye"
            android:layout_gravity="center"/>
        <RadioButton
            android:id="@+id/rbContent"
            style="@style/main_tab_style"
            android:textSize="16dp"
            android:text="签到历史" />
    </RadioGroup>

    <View
        style="@style/line"/>

    <com.hy.powerplatform.news.myview.CustomViewPager
        android:id="@+id/customViewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>


</LinearLayout>
