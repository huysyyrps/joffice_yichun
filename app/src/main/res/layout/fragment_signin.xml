<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="15dp">
            <!--标准上下班时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_margin="15dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/linearlayout_radius"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btnUp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/up_work"
                        android:paddingLeft="5dp"
                        android:textSize="17dp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/linearlayout_radius"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btnDown"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:text="@string/down_work"
                        android:textSize="17dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <!--签到时间和地点-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/clock"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/sign_in_time"
                        android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/tvSignInTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="7:50"
                        android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/address1"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/sign_in_address"
                        android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/tvSignInAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                        android:text="正在定位..."
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <View
                    android:layout_width="2dp"
                    android:layout_height="14dp"
                    android:background="@color/color_bg_selected"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:text="@string/function_list"
                    android:textSize="14dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <View style="@style/line"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:src="@drawable/photo"
                        android:scaleType="fitXY"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:scaleType="fitXY"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:visibility="gone"
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:background="@drawable/linearlayout_colore_radius"
                android:text="@string/commit"
                android:layout_marginBottom="40dp"
                style="@style/Button" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>