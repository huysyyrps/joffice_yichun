<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hy.powerplatform.login.activity.SecondActivity">
    <com.hy.powerplatform.my_utils.myViews.Header
        android:id="@+id/header"
        style="@style/Heander"
        app:header_is_left_iv_visiable="false"
        app:header_title="@string/app_name">
    </com.hy.powerplatform.my_utils.myViews.Header>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:visibility="gone"
            android:id="@+id/mIvBanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/banner" />
        <!--功能列表分割线-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:background="@color/color_bg_selected"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="@string/function_list"
                android:textSize="14dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <View
            style="@style/line"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:id="@+id/llOa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:padding="8dp"
                    android:src="@drawable/flow_item1"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OA流程"
                    android:textSize="15dp"
                    android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvLeave"
                style="@style/numTextView"
                android:layout_gravity="top|right"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:id="@+id/llPersonal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:padding="8dp"
                    android:src="@drawable/flow_item4"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="个人中心"
                    android:textSize="15dp"
                    android:gravity="center"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
