<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="投诉人: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <EditText
                    android:id="@+id/etPerson"
                    style="@style/oaEditText"
                    android:hint="请填写投诉人姓名" />
            </LinearLayout>

            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="时间: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/tvTime"
                    style="@style/oaEditText" />
            </LinearLayout>

            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="性别: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <Spinner
                    android:id="@+id/spinnerSex"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5" />
            </LinearLayout>
            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="联系电话: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <EditText
                    android:id="@+id/etPhone"
                    style="@style/oaEditText"
                    android:hint="请填写联系电话"
                    android:inputType="number" />
            </LinearLayout>
            <View style="@style/line"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="被投诉人: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/tvPerson"
                    style="@style/oaEditText"
                    android:hint="请选择被投诉人" />
            </LinearLayout>
            <View style="@style/line"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="所属公司: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@color/shouye" />

                <Spinner
                    android:id="@+id/spinnerComp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5" />
            </LinearLayout>
            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="被投诉车牌: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@color/shouye" />

                <EditText
                    android:id="@+id/etCarNo"
                    style="@style/oaEditText"
                    android:hint="请填写车牌号"/>
            </LinearLayout>

            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="所属线路: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@color/shouye" />

                <EditText
                    android:id="@+id/etLine"
                    style="@style/oaEditText"
                    android:hint="请填写所属线路"></EditText>
            </LinearLayout>

            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="受理人: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/etShouLi"
                    style="@style/oaEditText"
                    android:hint="请填写受理人"></TextView>
            </LinearLayout>

            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="投诉内容: *"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@color/shouye" />

                <EditText
                    android:id="@+id/etData"
                    style="@style/oaEditText"
                    android:hint="请填写投诉内容"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="附件:" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/tvData"
                    style="@style/oaEditText"
                    android:hint="点击选择附件" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/shouye" />

           <LinearLayout
               android:id="@+id/llAll"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/tvLeaderW"
                       style="@style/oaTextView"
                       android:text="部门领导:" />

                   <View
                       android:layout_width="1dp"
                       android:layout_height="15dp"
                       android:layout_gravity="center_vertical"
                       android:background="@color/shouye" />

                   <TextView
                       android:id="@+id/etLeader"
                       style="@style/oaEditText"
                       android:hint="部门领导意见" />
               </LinearLayout>
               <View style="@style/line"></View>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/tvLeader1W"
                       style="@style/oaTextView"
                       android:text="分公司接办人:" />

                   <View
                       android:layout_width="1dp"
                       android:layout_height="15dp"
                       android:layout_gravity="center_vertical"
                       android:background="@color/shouye" />

                   <TextView
                       android:id="@+id/etLeader1"
                       style="@style/oaEditText"
                       android:hint="分公司接办人意见意见" />
               </LinearLayout>
               <View style="@style/line"></View>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/tvLeader2W"
                       style="@style/oaTextView"
                       android:text="营运公司:" />

                   <View
                       android:layout_width="1dp"
                       android:layout_height="15dp"
                       android:layout_gravity="center_vertical"
                       android:background="@color/shouye" />

                   <TextView
                       android:id="@+id/etLeader2"
                       style="@style/oaEditText"
                       android:hint="营运公司意见" />
               </LinearLayout>
               <View style="@style/line"></View>
               <LinearLayout
                   android:visibility="gone"
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:orientation="horizontal">

                   <TextView
                       style="@style/oaTextView"
                       android:text="安全服务部:" />

                   <View
                       android:layout_width="1dp"
                       android:layout_height="15dp"
                       android:layout_gravity="center_vertical"
                       android:background="@color/shouye" />

                   <TextView
                       android:id="@+id/etLeader3"
                       style="@style/oaEditText"
                       android:hint="安全服务部意见" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/tvLeader4W"
                       style="@style/oaTextView"
                       android:text="反馈投诉人:" />

                   <View
                       android:layout_width="1dp"
                       android:layout_height="15dp"
                       android:layout_gravity="center_vertical"
                       android:background="@color/shouye" />

                   <TextView
                       android:id="@+id/etLeader4"
                       style="@style/oaEditText"
                       android:hint="反馈投诉人意见" />
               </LinearLayout>
               <View
                   style="@style/line"
                   android:layout_marginBottom="45dp"></View>
           </LinearLayout>

            <Button
                android:id="@+id/btnUp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="45dp"
                android:background="@drawable/linearlayout_colore_radius"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/whith" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>