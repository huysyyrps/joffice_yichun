<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_inspectstarte"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.hy.powerplatform.business_inspect.activity.InspectStarteActivity">

    <com.hy.powerplatform.my_utils.myViews.Header
        android:id="@+id/header"
        style="@style/Heander"
        app:header_title="@string/inspect_suffer">
    </com.hy.powerplatform.my_utils.myViews.Header>

    <RadioGroup
        android:id="@+id/radionGroup"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbPass"
            android:checked="true"
            style="@style/main_tab_style"
            android:textSize="16dp"
            android:text="@string/pass" />
        <View
            android:layout_width="1.5dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/shouye"/>
        <RadioButton
            android:id="@+id/rbNoPass"
            style="@style/main_tab_style"
            android:textSize="16dp"
            android:text="@string/no_pass" />
    </RadioGroup>

    <View
        style="@style/line"/>

    <com.hy.powerplatform.news.myview.CustomViewPager
        android:id="@+id/customViewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>

    <ScrollView
        android:visibility="gone"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">
            <!--时间选择器-->
            <LinearLayout
                style="@style/linerlayout"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="match_parent"
                    style="@style/TextView"
                    android:text="@string/inspect_time"/>
                <TextView
                    android:id="@+id/tvTime"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    style="@style/TextView" />
                <ImageView
                    android:id="@+id/imTimeSelect"
                    style="@style/TextView"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <include layout="@layout/line"/>
            <!--选择检查线路-->
            <LinearLayout
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="@string/select_inspect_line"/>
                <EditText
                    android:id="@+id/etSelectLine"
                    style="@style/TextView"
                    android:background="@drawable/linearlayout"
                    android:hint="138路"
                    android:paddingLeft="10dp"
                    android:textColor="@color/bg_do_botttom"/>
                <ImageView
                    android:id="@+id/imLineSelect"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <include layout="@layout/line"/>
            <!--选择检查车辆-->
            <LinearLayout
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="@string/select_inspect_car"/>
                <EditText
                    android:id="@+id/etSelectCar"
                    style="@style/TextView"
                    android:background="@drawable/linearlayout"
                    android:hint="7716-鲁HG7716"
                    android:paddingLeft="10dp"
                    android:textColor="@color/bg_do_botttom"/>
                <ImageView
                    android:id="@+id/imCarSelect"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <include layout="@layout/line"/>
            <!--选择检查驾驶员-->
            <LinearLayout
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="@string/select_inspect_driver"/>
                <EditText
                    android:id="@+id/etSelectDriver"
                    style="@style/TextView"
                    android:background="@drawable/linearlayout"
                    android:hint="王某"
                    android:paddingLeft="10dp"
                    android:textColor="@color/bg_do_botttom"/>
                <ImageView
                    android:id="@+id/imDriverSelect"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <include layout="@layout/line"/>
            <!--区段-->
            <LinearLayout
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="@string/select_inspect_address"/>
                <EditText
                    android:id="@+id/etSelectAddress"
                    style="@style/TextView"
                    android:background="@drawable/linearlayout"
                    android:hint="华阳路67-1号"
                    android:paddingLeft="10dp"
                    android:textColor="@color/bg_do_botttom"/>
                <ImageView
                    style="@style/TextView"
                    android:visibility="invisible"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <include layout="@layout/line"/>
            <!--综合评价-->
            <LinearLayout
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    android:id="@+id/tvSelectAssess"
                    android:text="@string/select_inspect_assess"
                    style="@style/TextView" />
                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbSelectAssessM"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="@string/inspect_assess_fine"/>
                    <RadioButton
                        android:id="@+id/rbSelectAssessC"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="@string/inspect_assess_pass"/>
                </RadioGroup>
            </LinearLayout>
            <include layout="@layout/line"/>
            <!--落实情况-->
            <LinearLayout
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    android:id="@+id/tvSelectSure"
                    style="@style/TextView"
                    android:text="@string/select_inspect_sure" />
                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbSelectSureM"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="@string/inspect_time_sure_m"/>
                    <RadioButton
                        android:id="@+id/rbSelectSureC"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="@string/inspect_time_sure_c"/>
                </RadioGroup>
            </LinearLayout>
            <include layout="@layout/line"/>
            <!--选择业务类型-->
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinner"
                android:spinnerMode="dialog"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="0dp"
                android:prompt="@string/please_select"
                style="@style/linerlayout"/>
            <!--子项-->
            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:descendantFocusability="blocksDescendants"/>

            <Button
                android:id="@+id/btn"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_marginBottom="45dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/linearlayout_colore_radius"
                android:text="@string/commit"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
