<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whith"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            style="@style/linerlayout"
            android:layout_marginTop="15dp"
            android:background="@drawable/linearlayout_radius"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/search_phone" />

            <EditText
                android:id="@+id/etSearchPhone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="输入姓名或名字查询" />

            <TextView
                android:id="@+id/tvSearchPhone"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/linearlayout_colore_radius"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/search_phone"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent" />
            <LinearLayout
                android:id="@+id/llRenovate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/linearlayout_radius"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    style="@style/TextView"
                    android:layout_marginLeft="10dp"
                    android:text="@string/renovate"/>
                <ImageView
                    style="@style/TextView"
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:src="@drawable/renovate"
                    android:text="@string/renovate"/>
            </LinearLayout>
        </LinearLayout>
        <View
            style="@style/line"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp" />
        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ExpandableListView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/imageView"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            style="@style/ImaheView"
            android:layout_gravity="center"
            android:src="@drawable/no_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="暂无内容"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"/>
    </LinearLayout>

</LinearLayout>