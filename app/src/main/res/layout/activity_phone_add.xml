<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_phone_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.hy.powerplatform.phone.activity.PhoneAddActivity">

    <com.hy.powerplatform.my_utils.myViews.Header
        android:id="@+id/header"
        style="@style/Heander"
        app:header_title="@string/add_person">
    </com.hy.powerplatform.my_utils.myViews.Header>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="基本资料"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/linearlayout_radius"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:text="姓名*"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/shouye"/>
            <EditText
                android:id="@+id/etName"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:paddingLeft="15dp"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:background="@null"
                android:gravity="center_vertical"/>
            <ImageView
                android:visibility="invisible"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/time_select"/>
        </LinearLayout>
        <include layout="@layout/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:text="称谓*"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/shouye"/>
            <TextView
                android:id="@+id/tvChengW"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:paddingLeft="15dp"
                android:text="先生"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/ivSelectChengW"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/time_select"/>
        </LinearLayout>
        <include layout="@layout/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:text="手机*"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/shouye"/>
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@null"
                android:paddingLeft="15dp"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:gravity="center_vertical"/>
            <ImageView
                android:visibility="invisible"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/time_select"/>
        </LinearLayout>
        <include layout="@layout/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:text="生日"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/shouye"/>
            <TextView
                android:id="@+id/tvLib"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:paddingLeft="15dp"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/ivSelectLib"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/time_select"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="45dp"
        android:background="@drawable/linearlayout_colore_radius"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:gravity="center"/>

</LinearLayout>
