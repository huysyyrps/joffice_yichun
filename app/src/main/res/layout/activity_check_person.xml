<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whith"
    android:orientation="vertical"
    tools:context="com.hy.powerplatform.business_inspect.newactivity.CheckPersonActivity">

  <com.hy.powerplatform.my_utils.myViews.Header
      android:id="@+id/header"
      style="@style/Heander"
      app:header_title_right="完成"
      app:header_title="人员列表">
  </com.hy.powerplatform.my_utils.myViews.Header>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:layout_margin="2dp"
      android:background="@drawable/linearlayout_radius">
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:background="@null"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/shousuo"
        android:layout_gravity="center_vertical"/>
  </FrameLayout>
  <View style="@style/HourLine"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
