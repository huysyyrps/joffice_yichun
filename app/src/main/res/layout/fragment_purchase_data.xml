                </LinearLayout>
                <View style="@style/line"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLeaderGYB"
                        style="@style/oaTextView"
