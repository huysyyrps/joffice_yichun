<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hy.powerplatform.oa_flow.fragment.FragmentCarData">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="部门: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <EditText
                    android:id="@+id/etClass"
                    style="@style/oaEditText"
                    android:hint="请填写部门" />
            </LinearLayout>
            <View style="@style/line"></View>

            <include layout="@layout/select_person" />
            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/oaTextView"
                    android:text="采购类型: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <Spinner
                    android:id="@+id/spinnerType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="时间: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/tvTime"
                    style="@style/oaEditText"
                    android:layout_weight="2.5" />
            </LinearLayout>
            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="资产类型: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <Spinner
                    android:id="@+id/spinnerzc"
                    style="@style/oaEditText"
                    android:layout_weight="2.5" />
            </LinearLayout>
            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="物品类型: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <Spinner
                    android:id="@+id/spinnertype"
                    style="@style/oaEditText"
                    android:layout_weight="2.5" />
            </LinearLayout>
            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="产品名称"
                        android:textColor="@color/black" />

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etName1"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etName2"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etName3"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etName4"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/shouye" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="单位"
                        android:textColor="@color/black" />

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etDepartment1"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etDepartment2"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etDepartment3"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etDepartment4"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />


                    <TextView
