                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/shouye"/>

                    <EditText
                        style="@style/textWrite"
                        android:hint="采购领导意见"
                        android:visibility="gone"/>

                    <TextView
