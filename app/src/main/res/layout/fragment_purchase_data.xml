                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:inputType="number|numberDecimal" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/shouye" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="单价"
                        android:textColor="@color/black" />

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etMoney1"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:inputType="number|numberDecimal" />

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etMoney2"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:inputType="number|numberDecimal" />

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etMoney3"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:inputType="number|numberDecimal"/>

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etMoney4"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:inputType="number|numberDecimal" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/shouye" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="总价"
                        android:textColor="@color/black" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etAllMoney1"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:inputType="numberDecimal" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etAllMoney2"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:inputType="numberDecimal" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etAllMoney3"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:inputType="numberDecimal" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etAllMoney4"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:inputType="numberDecimal" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/shouye" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="备注"
                        android:textColor="@color/black" />

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etBZ1"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etBZ2"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etBZ3"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />

                    <View style="@style/line"></View>

                    <EditText
                        android:id="@+id/etBZ4"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp" />
                </LinearLayout>
            </LinearLayout>
            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="合计: *"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/tvAllNum"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="合计数量"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="合计数量: *"
                    android:textColor="@color/black"
                    android:visibility="invisible" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/tvAllMoney"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="合计金额"
                    android:textColor="@color/black" />
            </LinearLayout>
            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:text="其他名称: " />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <EditText
                    android:id="@+id/etOtherName"
                    style="@style/textWrite"
                    android:layout_weight="2.5"
                    android:hint="请填其他产品" />
            </LinearLayout>
            <View style="@style/line"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:text="其他金额: " />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <EditText
                    android:id="@+id/etOtherMoney"
                    style="@style/textWrite"
                    android:layout_weight="2.5"
                    android:hint="请填其他金额"
                    android:inputType="number|numberDecimal"/>
            </LinearLayout>
            <View style="@style/line"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:text="其他备注: " />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <EditText
                    android:id="@+id/etOtherMemo"
                    style="@style/textWrite"
                    android:layout_weight="2.5"
                    android:hint="请填其他备注" />
            </LinearLayout>
            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:text="用途: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <EditText
                    android:id="@+id/etUse"
                    style="@style/textWrite"
                    android:layout_weight="2.5"
                    android:hint="请填写用途" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="附件:" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/tvData"
                    style="@style/oaEditText"
                    android:hint="点击选择附件" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/shouye" />
            <LinearLayout
                android:id="@id/llAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLeaderW"
