<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.hy.powerplatform.oa_flow.fragment.FragmentCarData">

    <com.hy.powerplatform.my_utils.myViews.Header
        android:id="@+id/header"
        style="@style/Heander"
        app:header_is_right_tv_visiable="true"
        app:header_title="办公物品采购详情">
    </com.hy.powerplatform.my_utils.myViews.Header>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="部门: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/etClass"
                    style="@style/oaTextView"
                    android:layout_weight="2.5"
                    android:hint="请填写部门" />
            </LinearLayout>

            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="申请人: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/etShenQingRen"
                    style="@style/oaTextView"
                    android:layout_weight="2.5"
                    android:hint="请填写申请人" />
            </LinearLayout>

            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="时间: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/tvTime"
                    style="@style/oaTextView"
                    android:layout_weight="2.5" />
            </LinearLayout>

            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="类型: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <RadioGroup
                    style="@style/oaTextView"
                    android:layout_weight="2.5"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rb1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:layout_height="match_parent"
                        android:text="计划内"/>
                    <RadioButton
                        android:id="@+id/rb2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:layout_height="match_parent"
                        android:text="计划外"/>
                </RadioGroup>
            </LinearLayout>

            <View style="@style/line"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="产品名称"
                        android:textColor="@color/black" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etName1"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etName2"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etName3"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etName4"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etName5"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/shouye" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="单位"
                        android:textColor="@color/black" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/tvDepartment1"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/tvDepartment2"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/tvDepartment3"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/tvDepartment4"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/tvDepartment5"
                        style="@style/oaEditText1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/shouye" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/shouye" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="数量"
                        android:textColor="@color/black" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etNum1"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etNum2"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etNum3"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etNum4"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etNum5"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/shouye" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="单价"
                        android:textColor="@color/black" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etMoney1"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etMoney2"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etMoney3"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etMoney4"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etMoney5"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/shouye" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:text="总价"
                        android:textColor="@color/black" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etAllMoney1"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etAllMoney2"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etAllMoney3"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etAllMoney4"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />

                    <View style="@style/line"></View>

                    <TextView
                        android:id="@+id/etAllMoney5"
                        style="@style/oaTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/oaTextView"
                    android:text="用途: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/etApplication"
                    style="@style/oaTextView"
                    android:layout_weight="2.5"
                    android:hint="请填写采购用途" />
            </LinearLayout>

            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:text="合计: *"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:background="@color/shouye"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tvAllNum"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:hint="合计数量"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:background="@color/shouye"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:hint="合计数量: *"
                    android:gravity="center"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:background="@color/shouye"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tvAllMoney"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:hint="合计数量"
                    android:gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <View style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/oaTextView"
                    android:text="其他: "
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:background="@color/shouye"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tvOther"
                    style="@style/textWrite"
                    android:layout_weight="2.5"
                    android:hint="请填其他产品"/>
            </LinearLayout>
            <View style="@style/line"></View>
            <LinearLayout
                android:id="@+id/llData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="附件:"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/tvData"
                    style="@style/textWrite"
                    android:hint="点击选择附件" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/shouye" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLeaderW"
                    style="@style/oaTextView"
                    android:text="部门领导:"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/etLeader1"
                    style="@style/textWrite"
                    android:layout_weight="2.5"
                    android:hint="部门领导意见" />
            </LinearLayout>

            <View style="@style/line"></View>

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLeader1W"
                    style="@style/oaTextView"
                    android:text="资产归口部门:"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/etLeader2"
                    style="@style/textWrite"
                    android:layout_weight="2.5"
                    android:hint="资产归口部门领导意见" />
            </LinearLayout>

            <View
                android:id="@+id/view1"
                style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLeader2W"
                    style="@style/oaTextView"
                    android:text="分管领导:"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/etLeader3"
                    style="@style/textWrite"
                    android:layout_weight="2.5"
                    android:hint="分管领导意见" />
            </LinearLayout>

            <View style="@style/line"></View>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLeader3W"
                    style="@style/oaTextView"
                    android:text="采购分管意见:"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/etLeader4"
                    style="@style/textWrite"
                    android:hint="财务领导意见" />
            </LinearLayout>

            <View
                android:id="@+id/view2"
                style="@style/line"></View>

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLeader4W"
                    style="@style/oaTextView"
                    android:text="财务总监意见:"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/etLeader5"
                    style="@style/textWrite"
                    android:hint="财务领导意见" />
            </LinearLayout>

            <View
                android:id="@+id/view3"
                style="@style/line"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLeader5W"
                    style="@style/oaTextView2"
                    android:text="总经理:"
                    android:layout_gravity="center_vertical"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/etLeader6"
                    style="@style/textWrite2"
                    android:hint="总经理意见" />
            </LinearLayout>

            <View
                style="@style/line"
                android:layout_marginBottom="45dp"></View>

            <Button
                android:id="@+id/btnUp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="45dp"
                android:background="@drawable/linearlayout_colore_radius"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/whith" />

            <Button
                android:id="@+id/btnHistory"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/linearlayout_colore_radius"
                android:text="流程审批信息"
                android:gravity="center"
                android:textColor="@color/whith"/>
            <android.support.v7.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
