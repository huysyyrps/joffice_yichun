<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_shi_gu_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.hy.powerplatform.business_inspect.activity.ShiGuCheckActivity">

    <com.hy.powerplatform.my_utils.myViews.Header
        android:id="@id/header"
        style="@style/Heander"
        app:header_title="事故编辑">
    </com.hy.powerplatform.my_utils.myViews.Header>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="2dp"
                android:background="@color/line3fill"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/linearlayout_colore_radius"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="基础信息"
                    android:textSize="16dp"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
            <!--时间选择器-->
            <LinearLayout
                android:id="@+id/llTime"
                style="@style/linerlayout"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_height="match_parent"
                    style="@style/TextView"
                    android:text="@string/inspect_time"
                    android:id="@+id/textView2" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    style="@style/TextView" />
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/imTimeSelect"
                    style="@style/TextView"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <include layout="@layout/line"/>
            <!--地点-->
            <LinearLayout
                style="@style/linerlayout"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="match_parent"
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="事故地点"/>
                <EditText
                    android:id="@+id/tvAddress"
                    android:layout_height="match_parent"
                    android:background="@drawable/linearlayout"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:hint="定位中......"
                    style="@style/TextView" />
                <ImageView
                    android:visibility="invisible"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <include layout="@layout/line"/>
            <!--选择检查线路-->
            <LinearLayout
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="@string/select_inspect_line"/>
                <EditText
                    android:id="@+id/etSelectLine"
                    style="@style/TextView"
                    android:background="@drawable/linearlayout"
                    android:hint="@string/plerse_write_keyword"
                    android:paddingLeft="4dp"
                    android:layout_weight="2" />
                <ImageView
                    android:id="@+id/imLineSelect"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <include layout="@layout/line"/>
            <!--选择检查车辆-->
            <LinearLayout
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="@string/select_inspect_car"/>
                <EditText
                    android:id="@+id/etSelectCar"
                    style="@style/TextView"
                    android:background="@drawable/linearlayout"
                    android:hint="@string/plerse_write_keyword"
                    android:paddingLeft="4dp"
                    android:layout_weight="2" />
                <ImageView
                    android:id="@+id/imCarSelect"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <include layout="@layout/line"/>
            <!--选择检查驾驶员-->
            <LinearLayout
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="@string/select_inspect_driver"/>
                <EditText
                    android:id="@+id/etSelectDriver"
                    style="@style/TextView"
                    android:background="@drawable/linearlayout"
                    android:hint="@string/plerse_write_keyword"
                    android:paddingLeft="4dp"
                    android:layout_weight="2" />
                <ImageView
                    android:id="@+id/imDriverSelect"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <include layout="@layout/line"/>
            <!--事故类型-->
            <LinearLayout
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="事故类型"/>
                <Spinner
                    android:id="@+id/spShiGuLeiXing"
                    android:visibility="gone"
                    style="@style/TextView"
                    android:paddingLeft="4dp"
                    android:layout_weight="2" />
                <TextView
                    android:id="@+id/tvShiGuLeiXing"
                    style="@style/TextView"
                    android:paddingLeft="4dp"
                    android:layout_weight="2" />
                <ImageView
                    android:id="@+id/ivShiGu"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <include layout="@layout/line"/>
            <!--事故责任-->
            <LinearLayout
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="事故责任"/>
                <Spinner
                    android:id="@+id/spShiGuZeRen"
                    android:visibility="gone"
                    style="@style/TextView"
                    android:paddingLeft="4dp"
                    android:background="@null"
                    android:layout_weight="2" />
                <TextView
                    android:id="@+id/tvShiGuZeRen"
                    style="@style/TextView"
                    android:paddingLeft="4dp"
                    android:layout_weight="2"/>
                <TextView
                    android:id="@+id/tvZeRen"
                    android:visibility="gone"
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="事故类型"/>
                <ImageView
                    android:id="@+id/ivZeRen"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <include layout="@layout/line"/>
            <!--事故性质-->
            <LinearLayout
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="事故性质"/>
                <Spinner
                    android:id="@+id/spShiGuXingZhi"
                    android:visibility="gone"
                    style="@style/TextView"
                    android:paddingLeft="4dp"
                    android:layout_weight="2"
                    android:background="@null"/>
                <TextView
                    android:id="@+id/tvShiGuXingZhi"
                    style="@style/TextView"
                    android:paddingLeft="4dp"
                    android:layout_weight="2" />
                <TextView
                    android:id="@+id/tvXingZhi"
                    android:visibility="gone"
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="事故类型"/>
                <ImageView
                    android:id="@+id/ivXingZhi"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <include layout="@layout/line"/>


            <!--对方信息-->
            <LinearLayout
                android:id="@+id/llOut"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/line3fill"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/linearlayout_colore_radius"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="对方信息"
                    android:textSize="16dp"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/jiantouxia"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llOutShow"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--对方姓名-->
                <LinearLayout
                    style="@style/linerlayout"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        style="@style/TextView"
                        android:layout_weight="0.8"
                        android:text="对方姓名"/>
                    <EditText
                        android:id="@+id/etOutName"
                        style="@style/TextView"
                        android:background="@drawable/linearlayout"
                        android:hint="@string/plerse_write_keyword"
                        android:paddingLeft="4dp"
                        android:layout_weight="2" />
                </LinearLayout>
                <include layout="@layout/line"/>
                <!--对方电话-->
                <LinearLayout
                    style="@style/linerlayout"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        style="@style/TextView"
                        android:layout_weight="0.8"
                        android:text="对方电话"/>
                    <EditText
                        android:id="@+id/etOutPhone"
                        style="@style/TextView"
                        android:background="@drawable/linearlayout"
                        android:hint="@string/plerse_write_keyword"
                        android:paddingLeft="4dp"
                        android:layout_weight="2" />
                </LinearLayout>
                <include layout="@layout/line"/>
                <!--对方车牌号-->
                <LinearLayout
                    style="@style/linerlayout"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        style="@style/TextView"
                        android:layout_weight="0.8"
                        android:text="对方车牌号"/>
                    <EditText
                        android:id="@+id/etOutCarNo"
                        style="@style/TextView"
                        android:background="@drawable/linearlayout"
                        android:hint="@string/plerse_write_keyword"
                        android:paddingLeft="4dp"
                        android:layout_weight="2" />
                </LinearLayout>
                <include layout="@layout/line"/>
                <!--对方证件号-->
                <LinearLayout
                    style="@style/linerlayout"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        style="@style/TextView"
                        android:layout_weight="0.8"
                        android:text="驾驶证号"/>
                    <EditText
                        android:id="@+id/etCarId"
                        style="@style/TextView"
                        android:background="@drawable/linearlayout"
                        android:hint="@string/plerse_write_keyword"
                        android:paddingLeft="4dp"
                        android:layout_weight="2" />
                </LinearLayout>
                <include layout="@layout/line"/>
            </LinearLayout>

            <!--赔偿信息-->
            <LinearLayout
                android:id="@+id/llPeiC"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="2dp"
                android:background="@color/line3fill"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/linearlayout_colore_radius"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="赔偿信息"
                    android:textSize="16dp"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/jiantouxia"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llPeiCShow"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--司机赔偿-->
                <LinearLayout
                    style="@style/linerlayout"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        style="@style/TextView"
                        android:layout_weight="0.8"
                        android:text="司机赔偿金额"/>
                    <EditText
                        android:id="@+id/etDiredP"
                        style="@style/TextView"
                        android:background="@drawable/linearlayout"
                        android:hint="@string/plerse_write_keyword"
                        android:paddingLeft="4dp"
                        android:layout_weight="2" />
                </LinearLayout>
                <include layout="@layout/line"/>
                <!--对方赔偿-->
                <LinearLayout
                    style="@style/linerlayout"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        style="@style/TextView"
                        android:layout_weight="0.8"
                        android:text="对方赔偿金额"/>
                    <EditText
                        android:id="@+id/etOutP"
                        style="@style/TextView"
                        android:background="@drawable/linearlayout"
                        android:hint="@string/plerse_write_keyword"
                        android:paddingLeft="4dp"
                        android:layout_weight="2" />
                </LinearLayout>
                <include layout="@layout/line"/>
            </LinearLayout>


            <!--其他信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="2dp"
                android:background="@color/line3fill"
                android:orientation="horizontal">
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/linearlayout_colore_radius"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="其他信息"
                    android:textSize="16dp"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:visibility="gone"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/jiantouxia"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/etBeiZhu"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:hint="事故说明"
                android:background="@drawable/linearlayout_radius" />

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:src="@drawable/photo"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <Button
                android:id="@+id/btn"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_marginBottom="45dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/linearlayout_colore_radius"
                android:text="@string/commit"/>





















            <!--事故类别-->
            <LinearLayout
                android:visibility="gone"
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="事故类别"/>
                <Spinner
                    android:id="@+id/spShiGuLeiBei"
                    style="@style/TextView"
                    android:paddingLeft="4dp"
                    android:layout_weight="2"
                    android:textColor="@color/bg_do_botttom"/>
                <ImageView
                    android:visibility="invisible"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <include layout="@layout/line"/>
            <!--事故地点-->
            <LinearLayout
                android:visibility="gone"
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="事故地点"/>
                <EditText
                    android:id="@+id/etShiGuDiDian"
                    style="@style/TextView"
                    android:background="@drawable/linearlayout"
                    android:hint="@string/plerse_write_keyword"
                    android:paddingLeft="4dp"
                    android:layout_weight="2"
                    android:textColor="@color/bg_do_botttom"/>
                <ImageView
                    android:visibility="invisible"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <!--<include layout="@layout/line"/>-->
            <!--事故原因-->
            <LinearLayout
                android:visibility="gone"
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="事故原因"/>
                <EditText
                    android:id="@+id/etShiGuYuanYin"
                    style="@style/TextView"
                    android:background="@drawable/linearlayout"
                    android:hint="@string/plerse_write_keyword"
                    android:paddingLeft="4dp"
                    android:layout_weight="2"
                    android:textColor="@color/bg_do_botttom"/>
                <ImageView
                    android:visibility="invisible"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <!--<include layout="@layout/line"/>-->
            <!--天气-->
            <LinearLayout
                android:visibility="gone"
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="天气状况"/>
                <Spinner
                    android:id="@+id/spShiGuTianQi"
                    style="@style/TextView"
                    android:background="@drawable/linearlayout"
                    android:hint="@string/plerse_write_keyword"
                    android:paddingLeft="4dp"
                    android:layout_weight="2"
                    android:textColor="@color/bg_do_botttom"/>
                <ImageView
                    android:visibility="invisible"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <!--<include layout="@layout/line"/>-->
            <!--地点-->
            <LinearLayout
                android:visibility="gone"
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="地点类别"/>
                <Spinner
                    android:id="@+id/spShiGuDiDian"
                    style="@style/TextView"
                    android:background="@drawable/linearlayout"
                    android:hint="@string/plerse_write_keyword"
                    android:paddingLeft="4dp"
                    android:layout_weight="2"
                    android:textColor="@color/bg_do_botttom"/>
                <ImageView
                    android:visibility="invisible"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <!--<include layout="@layout/line"/>-->
            <!--受伤人数-->
            <LinearLayout
                android:visibility="gone"
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="受伤人数"/>
                <EditText
                    android:id="@+id/etShiGuShouShang"
                    style="@style/TextView"
                    android:background="@drawable/linearlayout"
                    android:hint="@string/plerse_write_keyword"
                    android:paddingLeft="4dp"
                    android:layout_weight="2"
                    android:textColor="@color/bg_do_botttom"/>
                <ImageView
                    android:visibility="invisible"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <!--<include layout="@layout/line"/>-->
            <!--死亡人数-->
            <LinearLayout
                android:visibility="gone"
                style="@style/linerlayout"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    style="@style/TextView"
                    android:layout_weight="0.8"
                    android:text="死亡人数"/>
                <EditText
                    android:id="@+id/etShiGuSiWang"
                    style="@style/TextView"
                    android:background="@drawable/linearlayout"
                    android:hint="@string/plerse_write_keyword"
                    android:paddingLeft="4dp"
                    android:layout_weight="2"
                    android:textColor="@color/bg_do_botttom"/>
                <ImageView
                    android:visibility="invisible"
                    style="@style/TextView"
                    android:layout_weight="0.5"
                    android:src="@drawable/time_select"/>
            </LinearLayout>
            <!--<include layout="@layout/line"/>-->



        </LinearLayout>
    </ScrollView>

</LinearLayout>
