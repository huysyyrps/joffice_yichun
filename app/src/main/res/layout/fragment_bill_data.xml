<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hy.powerplatform.oa_flow.fragment.FragmentCarData">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="宜春市公交集团总公司购置团体意外险等"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"/>
                    <EditText
                        android:id="@+id/etNum"
                        style="@style/oaEditText"
                        android:layout_margin="5dp"
                        android:background="@drawable/linearlayout"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="名，"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:paddingRight="8dp"/>
                </LinearLayout>
                <View style="@style/line"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="意外险"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"/>
                    <EditText
                        android:id="@+id/etMoney"
                        style="@style/oaEditText"
                        android:layout_margin="5dp"
                        android:background="@drawable/linearlayout"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="元，"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:paddingRight="8dp"/>
                </LinearLayout>
                <View style="@style/line"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="合计："
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"/>
                    <EditText
                        android:id="@+id/etTen"
                        style="@style/oaEditText"
                        android:layout_margin="5dp"
                        android:background="@drawable/linearlayout"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="拾"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center_vertical" />
                    <EditText
                        android:id="@+id/etWan"
                        style="@style/oaEditText"
                        android:layout_margin="5dp"
                        android:background="@drawable/linearlayout"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="万"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center_vertical" />
                    <EditText
                        android:id="@+id/etQian"
                        style="@style/oaEditText"
                        android:layout_margin="5dp"
                        android:background="@drawable/linearlayout"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="仟"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center_vertical" />
                    <EditText
                        android:id="@+id/etBai"
                        style="@style/oaEditText"
                        android:layout_margin="5dp"
                        android:background="@drawable/linearlayout"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="佰"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center_vertical" />
                    <EditText
                        android:id="@+id/etShi"
                        style="@style/oaEditText"
                        android:layout_margin="5dp"
                        android:background="@drawable/linearlayout"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="拾"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center_vertical" />
                    <EditText
                        android:id="@+id/etYuan"
                        style="@style/oaEditText"
                        android:layout_margin="5dp"
                        android:background="@drawable/linearlayout"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="元"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center_vertical" />
                    <EditText
                        android:id="@+id/etJiao"
                        style="@style/oaEditText"
                        android:layout_margin="5dp"
                        android:background="@drawable/linearlayout"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="角"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center_vertical" />
                    <EditText
                        android:id="@+id/etFen"
                        style="@style/oaEditText"
                        android:layout_margin="5dp"
                        android:background="@drawable/linearlayout"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="分"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>
            <View style="@style/line"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/oaTextView"
                    android:text="用车时间: *" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />
                <TextView
                    android:id="@+id/tvTime"
                    style="@style/oaEditText" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="附件:" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/tvData"
                    style="@style/oaEditText"
                    android:hint="点击选择附件" />
            </LinearLayout>
            <View style="@style/line"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="借款日期: *" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <TextView
                    android:id="@+id/tvDate"
                    style="@style/oaEditText" />
            </LinearLayout>
            <View style="@style/line"></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/shouye" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="部门领导:" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <EditText
                    android:id="@+id/etLeader"
                    style="@style/oaEditText"
                    android:hint="部门领导意见" />
            </LinearLayout>
            <View style="@style/line"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="分管领导:" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <EditText
                    android:id="@+id/etLeader1"
                    style="@style/oaEditText"
                    android:hint="分管领导意见" />
            </LinearLayout>
            <View style="@style/line"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/oaTextView"
                    android:text="总经理:" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/shouye" />

                <EditText
                    android:id="@+id/etLeader2"
                    style="@style/oaEditText"
                    android:hint="总经理意见" />
            </LinearLayout>
            <View
                style="@style/line"
                android:layout_marginBottom="45dp"></View>
            <Button
                android:id="@+id/btnUp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="45dp"
                android:background="@drawable/linearlayout_colore_radius"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/whith" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
