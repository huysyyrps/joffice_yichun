<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_fit_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <com.hy.powerplatform.my_utils.myViews.Header
        android:id="@+id/header"
       style="@style/Heander"
        app:header_title="@string/fit_window">
    </com.hy.powerplatform.my_utils.myViews.Header>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/linearlayout_radius">
        <ImageView
            style="@style/ImaheView"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nickname"/>
        <EditText
            android:id="@+id/et_FitIp"
            style="@style/EditText"
            android:textColor="@color/bg_do_botttom"
            android:hint="@string/fit_ip"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_margin="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/linearlayout_radius">
        <ImageView
            style="@style/ImaheView"
            android:layout_marginLeft="10dp"
            android:src="@drawable/password" />
        <EditText
            android:id="@+id/et_FitSocket"
            style="@style/EditText"
            android:textColor="@color/bg_do_botttom"
            android:hint="@string/fit_socket" />
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/black"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_FitFoud"
            style="@style/EditText"
            android:gravity="center"
            android:text="joffice"
            android:textColor="@color/bg_do_botttom" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/linearlayout_radius">
        <ImageView
            style="@style/ImaheView"
            android:layout_marginLeft="10dp"
            android:src="@drawable/address1"/>
        <EditText
            android:id="@+id/etAddress"
            style="@style/EditText"
            android:textColor="@color/bg_do_botttom"
            android:hint="请输入地区"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_FitSure"
        android:layout_width="match_parent"
        android:layout_margin="25dp"
        android:layout_height="45dp"
        android:text="@string/save"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@drawable/linearlayout_colore_radius"/>

</LinearLayout>
