<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hy.powerplatform.oa_flow.phone.PhoneActivity">

    <com.hy.powerplatform.my_utils.myViews.Header
        android:id="@+id/header"
        style="@style/Heander"
        app:header_title="@string/phone_list"
        app:header_title_right="@string/query">
    </com.hy.powerplatform.my_utils.myViews.Header>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            style="@style/oaTextView"
            android:text="部门: *" />
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@color/shouye" />
        <TextView
            android:id="@+id/tvDepartment"
            style="@style/oaEditText"
            android:hint="请选择部门"/>
    </LinearLayout>
    <View style="@style/line"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            style="@style/oaTextView"
            android:text="姓名: *" />
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@color/shouye" />
        <TextView
            android:id="@+id/tvName"
            style="@style/oaEditText"
            android:hint="请选择姓名"/>
    </LinearLayout>
    <View style="@style/line"></View>

    <com.example.refreshview.CustomRefreshView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.example.refreshview.CustomRefreshView>


</LinearLayout>
